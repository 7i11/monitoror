#!/usr/bin/env bash

##########################################################################
# This script is used by TravisCI to deploy release version of monitoror #
##########################################################################

CHANGELOG=$(cat CHANGELOG.md 2>/dev/null)

echo "Starting release-on-github script ..."
echo " - VERSION: ${TRAVIS_TAG}"

ghr \
  -t ${GITHUB_TOKEN} \
  -u monitoror \
  -r monitoror \
  -c ${TRAVIS_COMMIT} \
  -delete \
  -n "Release ${TRAVIS_TAG}" \
  -b "${CHANGELOG}" \
  ${TRAVIS_TAG} \
  ./output/
