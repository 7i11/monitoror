#!/usr/bin/env bash

# Do not use this script manually, Use makefile
set -eu -o pipefail

source ./scripts/.variables

# Check param or use default
if [[ $# -eq 1 ]]; then
  if [[ $1 == "windows" ]]; then
    export GOOS=windows
    export GOARCH=amd64
  elif [[ $1 == "linux" ]]; then
    export GOOS=linux
    export GOARCH=amd64
  elif [[ $1 == "macos" ]]; then
    export GOOS=darwin
    export GOARCH=amd64
  fi
fi

# Define Target name
if [[ $GOOS == "windows" ]]; then
  TARGET="output/monitoror-$GOOS-$GOARCH.exe"
elif [[ $GOOS == "darwin" ]]; then
  TARGET="output/monitoror-macos-$GOARCH"
else
  TARGET="output/monitoror-$GOOS"
fi

export LDFLAGS="\
    -w \
    -X \"github.com/monitoror/monitoror/cli/version.GitCommit=${GITCOMMIT}\" \
    -X \"github.com/monitoror/monitoror/cli/version.BuildTime=${BUILDTIME}\" \
    -X \"github.com/monitoror/monitoror/cli/version.Version=${VERSION}\" \
    ${LDFLAGS:-} \
"

export CGO_ENABLED=0
export GOGC=off

echo "Building statically linked $TARGET"
go build -o "${TARGET}" --ldflags "${LDFLAGS}" "${SOURCE}"
